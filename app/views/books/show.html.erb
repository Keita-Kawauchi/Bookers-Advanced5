<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User Info</h2>
      <%= render 'users/info' %>

      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td>
  		      <%= link_to (@book.user) do %>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book) %>
          </td>
          <td>
           <%= @book.body %>
          </td>
         <% if @book.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success text-white" %></td>
          <td><%= link_to 'Destroy', book_path(@book) , method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger text-white"%></td>
         <% end %>
        </tr>
      </table>
    </div>
  </div>
