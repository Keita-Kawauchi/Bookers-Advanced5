<table class='table'>
  <%= attachment_image_tag user, :profile_image, size: "100x100",  fallback: "no_image.jpg" %>
  <table>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
   <td>
    <%= render ‘relationships/follow_button’, user: @user %>
     <% if current_user.following?(user) %>
      <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %>
     <% else %>
      <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
     <% end %>
   </td>
 </tr>
</table>

<div class='row'>
  <%= link_to '', edit_user_path(user.id),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
</div>